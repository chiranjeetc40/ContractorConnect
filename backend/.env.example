# Application
APP_NAME=ContractorConnect
APP_VERSION=1.0.0
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Database
DATABASE_URL=postgresql://contractor_user:contractor_pass@localhost:5432/contractorconnect_dev
DATABASE_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8081"]

# SMS/OTP Configuration
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6
MAX_OTP_ATTEMPTS=3

# OTP Delivery Configuration
# Options: console (dev), email, sms_twilio, whatsapp_twilio, sms_msg91
OTP_DELIVERY_METHOD=console
# Optional fallback if primary fails (e.g., email)
OTP_FALLBACK_METHOD=

# Twilio Configuration (for SMS and WhatsApp)
# Sign up: https://www.twilio.com/try-twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
# For WhatsApp (needs approved template)
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# MSG91 Configuration (India SMS - Affordable)
# Sign up: https://msg91.com/signup
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=CTRCTR
MSG91_ROUTE=4
MSG91_TEMPLATE_ID=your-template-id

# Legacy SMS Config (deprecated - use OTP_DELIVERY_METHOD instead)
SMS_PROVIDER=twilio
SMS_API_KEY=your-twilio-api-key
SMS_API_SECRET=your-twilio-api-secret
SMS_FROM_NUMBER=+19787248480

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@contractorconnect.com
SMTP_FROM_NAME=ContractorConnect

# File Storage
STORAGE_TYPE=local  # local or s3
# For S3
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=ap-south-1
S3_BUCKET_NAME=contractorconnect-files
# For Local
UPLOAD_DIR=uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
